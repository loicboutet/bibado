<% content_for :page_scripts do %>
<script>
    const POSITIONS = 6;
    
    function setMarkerPosition(marker, position) {
        const percentage = (position / (POSITIONS - 1)) * 100;
        marker.style.left = `calc(${percentage}% - 2px)`;
        marker.dataset.position = position;
    }
    
    // Initialize all markers
    document.querySelectorAll('.progress-marker').forEach(marker => {
        const pos = parseInt(marker.dataset.position) || 0;
        setMarkerPosition(marker, pos);
    });
    
    // Click on track to set position
    document.querySelectorAll('.progress-bar-container').forEach(container => {
        container.addEventListener('click', (e) => {
            const rect = container.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const percentage = x / rect.width;
            const position = Math.round(percentage * (POSITIONS - 1));
            const clampedPos = Math.max(0, Math.min(POSITIONS - 1, position));
            
            const marker = container.querySelector('.progress-marker');
            setMarkerPosition(marker, clampedPos);
        });
    });
    
    // Drag functionality
    document.querySelectorAll('.progress-marker').forEach(marker => {
        let isDragging = false;
        
        const startDrag = (e) => {
            isDragging = true;
            e.preventDefault();
            e.stopPropagation();
        };
        
        const doDrag = (e) => {
            if (!isDragging) return;
            
            const container = marker.parentElement;
            const rect = container.getBoundingClientRect();
            const clientX = e.type.includes('touch') ? e.touches[0].clientX : e.clientX;
            const x = clientX - rect.left;
            const percentage = x / rect.width;
            const position = Math.round(percentage * (POSITIONS - 1));
            const clampedPos = Math.max(0, Math.min(POSITIONS - 1, position));
            
            setMarkerPosition(marker, clampedPos);
        };
        
        const endDrag = () => {
            isDragging = false;
        };
        
        marker.addEventListener('mousedown', startDrag);
        document.addEventListener('mousemove', doDrag);
        document.addEventListener('mouseup', endDrag);
        
        marker.addEventListener('touchstart', startDrag);
        document.addEventListener('touchmove', doDrag);
        document.addEventListener('touchend', endDrag);
    });
</script>
