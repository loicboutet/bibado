        margin-bottom: 12px;
    }
    
    .progress-label {
        width: 80px;
        text-align: left;
        font-weight: 500;
        font-size: 10px;
        flex-shrink: 0;
    }
    
    .progress-bar-container {
        flex: 1;
        position: relative;
        height: 24px;
        display: flex;
        align-items: center;
        cursor: pointer;
    }
    
    .progress-track {
        width: 100%;
        height: 2px;
        background-color: #E0E0E0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .progress-dot {
        width: 6px;
        height: 6px;
        background-color: #E0E0E0;
        border-radius: 50%;
    }
    
    .progress-marker {
        position: absolute;
        width: 4px;
        height: 18px;
        background-color: #E07A5F;
        border-radius: 2px;
        cursor: grab;
        transition: left 0.15s ease;
    }
    
    .progress-marker:active {
        cursor: grabbing;
    }
    
    .chart-labels {
        display: flex;
        font-size: 8px;
        color: #999;
        margin-left: 80px;
        margin-top: 4px;
    }
    
    .chart-labels span {
        flex: 1;
        text-align: center;
    }
    
    .chart-labels span:first-child {
        text-align: left;
    }
    
    .chart-labels span:last-child {
        text-align: right;
    }
    
    .apple-badge {
        width: 50px;
        height: 50px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .apple-badge svg {
        width: 100%;
        height: 100%;
    }
    
    .apple-badge span {
        position: absolute;
        font-size: 20px;
        font-weight: bold;
        color: #555;
    }
    
    .meal-card {
        width: 48%;
    }
    
    .meal-card img {
        width: 100%;
        height: 120px;
        object-fit: cover;
        border-radius: 12px;
    }
    
    .last-tried-badge {
        background-color: var(--orange);
        color: white;
        padding: 8px 14px;
        padding-right: 20px;
        font-size: 13px;
        font-weight: 500;
        position: relative;
        display: inline-block;
    }
    
    .last-tried-badge::after {
        content: '';
        position: absolute;
        right: -12px;
        top: 0;
        width: 0;
        height: 0;
        border-top: 18px solid transparent;
        border-bottom: 18px solid transparent;
        border-left: 12px solid var(--orange);
    }
<% end %>

