<% content_for :page_scripts do %>
<script>
    const POSITIONS = 6;
    const MARKER_WIDTH = 5;
    const DOT_WIDTH = 10;
    
    function setMarkerPosition(marker, position) {
        const container = marker.parentElement;
        const track = container.querySelector('.progress-track');
        const dots = track.querySelectorAll('.progress-dot');
        
        if (dots[position]) {
            const trackRect = track.getBoundingClientRect();
            const dotRect = dots[position].getBoundingClientRect();
            const dotCenter = dotRect.left + (dotRect.width / 2) - trackRect.left;
            const markerLeft = dotCenter - (MARKER_WIDTH / 2);
            marker.style.left = markerLeft + 'px';
        }
        
        marker.dataset.position = position;
        
        // Haptic feedback if available
        if (navigator.vibrate) {
            navigator.vibrate(10);
        }
    }
    
    // Initialize all markers after layout
    function initMarkers() {
        document.querySelectorAll('.progress-marker').forEach(marker => {
            const pos = parseInt(marker.dataset.position) || 0;
            setMarkerPosition(marker, pos);
        });
    }
    
    // Run after DOM is ready and on resize
    setTimeout(initMarkers, 10);
    window.addEventListener('resize', initMarkers);
    
    // Click on dots to set position
    document.querySelectorAll('.progress-dot').forEach(dot => {
        dot.addEventListener('click', (e) => {
            e.stopPropagation();
            const pos = parseInt(dot.dataset.pos);
            const container = dot.closest('.progress-bar-container');
            const marker = container.querySelector('.progress-marker');
            setMarkerPosition(marker, pos);
        });
    });
    
    // Click on track to set position
    document.querySelectorAll('.progress-bar-container').forEach(container => {
        container.addEventListener('click', (e) => {
            if (e.target.classList.contains('progress-dot')) return;
            
            const track = container.querySelector('.progress-track');
            const dots = track.querySelectorAll('.progress-dot');
            const trackRect = track.getBoundingClientRect();
            const clickX = e.clientX - trackRect.left;
            
            // Find closest dot
            let closestPos = 0;
            let closestDist = Infinity;
            
            dots.forEach((dot, i) => {
                const dotRect = dot.getBoundingClientRect();
                const dotCenter = dotRect.left + (dotRect.width / 2) - trackRect.left;
                const dist = Math.abs(clickX - dotCenter);
                if (dist < closestDist) {
                    closestDist = dist;
                    closestPos = i;
                }
            });
            
            const marker = container.querySelector('.progress-marker');
            setMarkerPosition(marker, closestPos);
        });
    });
    
    // Drag functionality
    document.querySelectorAll('.progress-marker').forEach(marker => {
        let isDragging = false;
        
        const startDrag = (e) => {
            isDragging = true;
            e.preventDefault();
            e.stopPropagation();
        };
        
        const doDrag = (e) => {
            if (!isDragging) return;
            
            const container = marker.parentElement;
            const track = container.querySelector('.progress-track');
            const dots = track.querySelectorAll('.progress-dot');
            const trackRect = track.getBoundingClientRect();
            const clientX = e.type.includes('touch') ? e.touches[0].clientX : e.clientX;
            const dragX = clientX - trackRect.left;
            
            // Find closest dot
            let closestPos = 0;
            let closestDist = Infinity;
            
            dots.forEach((dot, i) => {
                const dotRect = dot.getBoundingClientRect();
                const dotCenter = dotRect.left + (dotRect.width / 2) - trackRect.left;
                const dist = Math.abs(dragX - dotCenter);
                if (dist < closestDist) {
                    closestDist = dist;
                    closestPos = i;
                }
            });
            
            setMarkerPosition(marker, closestPos);
        };
        
        const endDrag = () => {
            isDragging = false;
        };
        
        marker.addEventListener('mousedown', startDrag);
        document.addEventListener('mousemove', doDrag);
        document.addEventListener('mouseup', endDrag);
        
        marker.addEventListener('touchstart', startDrag);
        document.addEventListener('touchmove', doDrag);
        document.addEventListener('touchend', endDrag);
    });
</script>
<% end %>
