<% content_for :title, "Day View - Bibado" %>

<% content_for :custom_header do %>
  <!-- Meal Planner Header - Mobile optimized -->
  <div class="bg-[#4ECDC4] text-white">
    <!-- Row 1: Title + View Buttons -->
    <div class="px-4 pt-3 pb-2 flex items-center justify-between">
      <h1 class="text-xl font-bold italic">Bibado Meal Planner</h1>
      <div class="flex flex-col gap-0.5">
        <%= link_to day_mockups_meal_plan_path, class: "px-4 py-0.5 text-[11px] font-medium rounded-full bg-[#D4A574] text-white text-center" do %>Day<% end %>
        <%= link_to mockups_meal_plan_path, class: "px-4 py-0.5 text-[11px] font-medium rounded-full bg-[#6B9F9C] text-white text-center" do %>Week<% end %>
        <%= link_to month_mockups_meal_plan_path, class: "px-4 py-0.5 text-[11px] font-medium rounded-full bg-[#6B9F9C] text-white text-center" do %>Month<% end %>
      </div>
    </div>
    
    <!-- Row 2: Burger + Date Navigation -->
    <div class="px-4 pb-3 flex items-center">
      <button class="mr-3" data-action="click->mobile-menu#toggle">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
      
      <div class="flex-1 flex items-center justify-center gap-2">
        <%= link_to day_mockups_meal_plan_path(date: (@date - 1.day).to_s), class: "text-white/80 hover:text-white" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <span class="bg-[#D4A574] px-5 py-1.5 rounded-full font-medium text-sm">
          <%= @date.strftime('%a %-d %b') %>
        </span>
        <%= link_to day_mockups_meal_plan_path(date: (@date + 1.day).to_s), class: "text-white/80 hover:text-white" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div data-controller="meal-calendar" class="min-h-screen bg-gray-50">

  <!-- Search Bar -->
  <div class="px-4 py-3">
    <div class="relative">
      <div class="absolute left-3 top-1/2 -translate-y-1/2 w-6 h-6 bg-[#D4A574] rounded-md flex items-center justify-center">
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <input type="text" placeholder="Foods & meals" 
             class="w-full pl-12 pr-4 py-3 rounded-full border border-gray-200 bg-white focus:border-[#4ECDC4] focus:ring-2 focus:ring-[#4ECDC4]/20 outline-none text-gray-700">
    </div>
  </div>

  <!-- Meal Slots -->
  <div class="px-4 space-y-3">
    <%
      meal_slots = [
        { name: 'BREAKFAST', color: '#FFB84D', meal: 'Porridge, steamed apple and peanut butter' },
        { name: 'AM SNACKS', color: '#4ECDC4', meal: nil },
        { name: 'LUNCH', color: '#E8B4B4', meal: nil },
        { name: 'PM SNACKS', color: '#4ECDC4', meal: nil },
        { name: 'DINNER', color: '#FF6B6B', meal: nil }
      ]
    %>
    
    <% meal_slots.each do |slot| %>
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <!-- Slot Header -->
        <div class="flex items-center gap-3 px-4 py-3">
          <button class="w-7 h-7 rounded-lg flex items-center justify-center" style="background-color: <%= slot[:color] %>20;">
            <svg class="w-4 h-4" fill="<%= slot[:color] %>" viewBox="0 0 24 24">
              <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
          </button>
          <span class="font-semibold text-sm" style="color: <%= slot[:color] %>;"><%= slot[:name] %></span>
        </div>
        
        <% if slot[:meal] %>
          <!-- Meal Content -->
          <div class="px-4 pb-4">
            <p class="text-gray-700 text-sm"><%= slot[:meal] %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Spacer -->
  <div class="h-8"></div>

  <!-- Foods tried today -->
  <div class="px-4 py-4">
    <h3 class="font-semibold text-gray-800 mb-3">Foods tried today</h3>
    <div class="flex gap-3 overflow-x-auto pb-2">
      <% [
        { name: 'Apple', image: 'https://images.unsplash.com/photo-1568702846914-96b305d2uj8e?w=100&h=100&fit=crop' },
        { name: 'Peanut butter', image: 'https://images.unsplash.com/photo-1612871689353-caa7c7a0e4b8?w=100&h=100&fit=crop' },
        { name: 'Porridge', image: 'https://images.unsplash.com/photo-1517673132405-a56a62b18caf?w=100&h=100&fit=crop' }
      ].each do |food| %>
        <div class="flex-shrink-0 text-center">
          <div class="w-16 h-16 rounded-lg overflow-hidden mb-1 border border-gray-200">
            <img src="<%= food[:image] %>" alt="<%= food[:name] %>" class="w-full h-full object-cover" onerror="this.src='/icon.png'">
          </div>
          <p class="text-xs text-gray-600"><%= food[:name] %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Allergens today -->
  <div class="px-4 pb-6">
    <h3 class="font-semibold text-gray-800 mb-3">Allergens today</h3>
    <div class="flex gap-3 overflow-x-auto pb-2">
      <% [
        { name: 'Oats', image: 'https://images.unsplash.com/photo-1586201375761-83865001e31c?w=100&h=100&fit=crop' },
        { name: 'Peanut', image: 'https://images.unsplash.com/photo-1567892320421-1c657571ea4e?w=100&h=100&fit=crop' }
      ].each do |allergen| %>
        <div class="flex-shrink-0 text-center">
          <div class="w-16 h-16 rounded-lg overflow-hidden mb-1 border border-gray-200">
            <img src="<%= allergen[:image] %>" alt="<%= allergen[:name] %>" class="w-full h-full object-cover" onerror="this.src='/icon.png'">
          </div>
          <p class="text-xs text-gray-600"><%= allergen[:name] %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Add Meal Modal -->
  <div data-meal-calendar-target="addMealModal" class="fixed inset-0 z-50 hidden items-end justify-center bg-black/50" data-action="click->meal-calendar#closeAddMealModal">
    <div class="bg-white rounded-t-3xl shadow-xl w-full max-w-md p-5 pb-8 animate-slide-up" onclick="event.stopPropagation()">
      <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mb-4"></div>
      <h3 class="font-bold text-lg text-[#2C3E50] mb-4">Add a meal</h3>
      
      <!-- Search -->
      <div class="relative mb-4">
        <input type="text" placeholder="Search meals..." class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-[#4ECDC4] focus:ring-2 focus:ring-[#4ECDC4]/20 outline-none">
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      
      <div class="space-y-2 max-h-60 overflow-y-auto">
        <% [
          { id: 1, name: 'Banana Porridge', desc: 'Breakfast â€¢ 10 mins' },
          { id: 2, name: 'Avocado Toast', desc: 'Breakfast â€¢ 5 mins' },
          { id: 3, name: 'Sweet Potato Mash', desc: 'Lunch â€¢ 15 mins' },
          { id: 4, name: 'Chicken Puree', desc: 'Dinner â€¢ 20 mins' }
        ].each do |meal| %>
          <button class="w-full flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition-colors text-left border border-gray-200">
            <div class="w-12 h-12 bg-gray-100 rounded-lg"></div>
            <div>
              <div class="font-medium text-[#2C3E50]"><%= meal[:name] %></div>
              <div class="text-xs text-gray-500"><%= meal[:desc] %></div>
            </div>
          </button>
        <% end %>
      </div>
      
      <button 
        class="w-full mt-4 py-3 text-gray-500 font-medium"
        data-action="click->meal-calendar#closeAddMealModal"
      >
        Cancel
      </button>
    </div>
  </div>

  <!-- Swap Modal -->
  <div data-meal-calendar-target="swapModal" class="fixed inset-0 z-50 hidden items-end justify-center bg-black/50" data-action="click->meal-calendar#closeSwapModal">
    <div class="bg-white rounded-t-3xl shadow-xl w-full max-w-md p-5 pb-8 animate-slide-up" onclick="event.stopPropagation()">
      <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mb-4"></div>
      <h3 class="font-bold text-lg text-[#2C3E50] mb-4">Swap for alternative</h3>
      
      <div class="space-y-2 max-h-60 overflow-y-auto">
        <% [
          { id: 100, name: 'Vegetarian Option', emoji: 'ðŸ¥—', desc: 'Plant-based alternative' },
          { id: 101, name: 'Dairy-Free Option', emoji: 'ðŸŒ±', desc: 'No dairy ingredients' },
          { id: 102, name: 'Quick & Easy', emoji: 'âš¡', desc: '5-minute prep time' }
        ].each do |option| %>
          <button class="w-full flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition-colors text-left border border-gray-200">
            <span class="text-2xl"><%= option[:emoji] %></span>
            <div>
              <div class="font-medium text-[#2C3E50]"><%= option[:name] %></div>
              <div class="text-xs text-gray-500"><%= option[:desc] %></div>
            </div>
          </button>
        <% end %>
      </div>
      
      <button 
        class="w-full mt-4 py-3 text-gray-500 font-medium"
        data-action="click->meal-calendar#closeSwapModal"
      >
        Cancel
      </button>
    </div>
  </div>
</div>

<style>
  @keyframes slideUp {
    from { transform: translateY(100%); }
    to { transform: translateY(0); }
  }
  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }
</style>
