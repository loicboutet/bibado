<% content_for :title do %>Meal Plan - Bibado<% end %>

<% content_for :custom_header do %>
  <!-- Meal Planner Header - Mobile optimized -->
  <div class="bg-[#4ECDC4] text-white">
    <!-- Row 1: Title + View Buttons -->
    <div class="px-4 pt-3 pb-2 flex items-center justify-between">
      <h1 class="text-xl font-bold italic">Bibado Meal Planner</h1>
      <div class="flex flex-col gap-0.5">
        <%= link_to day_mockups_meal_plan_path, class: "px-4 py-0.5 text-[11px] font-medium rounded-full bg-[#6B9F9C] text-white text-center" do %>Day<% end %>
        <%= link_to mockups_meal_plan_path, class: "px-4 py-0.5 text-[11px] font-medium rounded-full bg-[#D4A574] text-white text-center" do %>Week<% end %>
        <%= link_to month_mockups_meal_plan_path, class: "px-4 py-0.5 text-[11px] font-medium rounded-full bg-[#6B9F9C] text-white text-center" do %>Month<% end %>
      </div>
    </div>
    
    <!-- Row 2: Burger + Date Navigation -->
    <div class="px-4 pb-3 flex items-center">
      <button class="mr-3" data-action="click->mobile-menu#toggle">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
      
      <div class="flex-1 flex items-center justify-center gap-2">
        <%= link_to mockups_meal_plan_path(week: (@current_week || 2) - 1), class: "text-white/80 hover:text-white" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <span class="bg-[#D4A574] px-5 py-1.5 rounded-full font-medium text-sm">
          August - Week <%= @current_week || 2 %>
        </span>
        <%= link_to mockups_meal_plan_path(week: (@current_week || 2) + 1), class: "text-white/80 hover:text-white" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div data-controller="meal-calendar" class="min-h-screen bg-gray-100">

  <!-- Week Grid now directly follows header -->
  <div class="bg-white px-4 py-3 flex items-center justify-center gap-3 hidden">
    <%= link_to mockups_meal_plan_path(week: (@current_week || 2) - 1), class: "p-1 text-gray-400 hover:text-gray-600" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>
    <div class="bg-[#D4A574] text-white px-6 py-2 rounded-full font-medium">
      August - Week <%= @current_week || 2 %>
    </div>
    <%= link_to mockups_meal_plan_path(week: (@current_week || 2) + 1), class: "p-1 text-gray-400 hover:text-gray-600" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    <% end %>
  </div>

  <!-- Week Grid -->
  <div class="px-2 py-2 overflow-x-auto">
    <%
      days = ['MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT', 'SUN']
      dates = [11, 12, 13, 14, 15, 16, 17]
      meal_slots = ['BREAKFAST', 'AM SNACK', 'LUNCH', 'PM SNACK', 'DINNER']
      
      # Sample meal data with images - matching the mockup
      week_meals = {
        0 => { # Monday
          'BREAKFAST' => { name: 'Egg', color: 'bg-[#E85555]', text_color: 'text-white', border: false },
          'AM SNACK' => { name: 'Yoghurt', color: 'bg-[#D4A574]', text_color: 'text-white', border: false },
          'LUNCH' => { name: 'Squash - batons', color: 'bg-white', text_color: 'text-gray-700', border: true },
          'PM SNACK' => nil,
          'DINNER' => { name: 'Squash - finger foods', color: 'bg-white', text_color: 'text-gray-700', border: false }
        },
        1 => { # Tuesday  
          'BREAKFAST' => { name: 'Squash - puree', color: 'bg-gray-100', text_color: 'text-gray-600', border: false },
          'AM SNACK' => nil,
          'LUNCH' => nil,
          'PM SNACK' => nil,
          'DINNER' => nil
        },
        2 => { # Wednesday
          'BREAKFAST' => nil,
          'AM SNACK' => nil,
          'LUNCH' => { name: 'Broccoli', image: '/icon.png', preview: true },
          'PM SNACK' => nil,
          'DINNER' => nil
        },
        3 => { # Thursday
          'BREAKFAST' => nil,
          'AM SNACK' => { name: '+ add meal', add: true },
          'LUNCH' => nil,
          'PM SNACK' => nil,
          'DINNER' => nil
        },
        4 => { 'BREAKFAST' => nil, 'AM SNACK' => nil, 'LUNCH' => nil, 'PM SNACK' => nil, 'DINNER' => nil },
        5 => { 'BREAKFAST' => nil, 'AM SNACK' => nil, 'LUNCH' => nil, 'PM SNACK' => nil, 'DINNER' => nil },
        6 => { 'BREAKFAST' => nil, 'AM SNACK' => nil, 'LUNCH' => nil, 'PM SNACK' => nil, 'DINNER' => nil }
      }
    %>
    
    <table class="w-full border-collapse text-xs">
      <!-- Day Headers -->
      <thead>
        <tr>
          <th class="w-16 p-1"></th>
          <% days.each_with_index do |day, idx| %>
            <th class="p-1 text-center">
              <%= link_to day_mockups_meal_plan_path(date: "2024-08-#{dates[idx]}"), class: "block hover:bg-gray-100 rounded p-1" do %>
                <div class="text-gray-500 font-medium text-[10px]"><%= day %></div>
                <div class="text-gray-800 font-bold text-sm"><%= dates[idx] %></div>
              <% end %>
            </th>
          <% end %>
        </tr>
      </thead>
      
      <!-- Meal Rows -->
      <tbody>
        <% meal_slots.each do |slot| %>
          <tr>
            <td class="p-1 align-middle">
              <div class="text-[10px] font-medium text-gray-500 writing-vertical transform -rotate-0 text-right pr-1"><%= slot %></div>
            </td>
            <% 7.times do |day_idx| %>
              <% meal = week_meals[day_idx][slot] %>
              <td class="p-0.5">
                <% if meal %>
                  <% if meal[:add] %>
                    <!-- Add meal button -->
                    <button 
                      class="w-full h-14 bg-gray-100 rounded flex items-center justify-center text-[#D4A574] text-[10px] font-medium hover:bg-gray-200 transition-colors"
                      data-action="click->meal-calendar#showAddMeal"
                    >
                      + add meal
                    </button>
                  <% elsif meal[:preview] %>
                    <!-- Meal with preview popup indicator -->
                    <div 
                      class="w-full h-14 bg-gray-100 rounded flex items-center justify-center relative cursor-pointer hover:shadow-md transition-shadow"
                      data-action="click->meal-calendar#showPreview"
                      data-meal-name="Squash Batons"
                      data-meal-id="1"
                    >
                      <span class="text-[10px] text-gray-600 text-center px-1"><%= meal[:name] %></span>
                    </div>
                  <% else %>
                    <!-- Regular meal cell -->
                    <div 
                      class="w-full h-14 <%= meal[:color] %> rounded flex items-center justify-center <%= meal[:border] ? 'border-2 border-green-500' : '' %> cursor-grab active:cursor-grabbing"
                      data-meal-calendar-target="mealSlot"
                      data-meal-id="<%= day_idx %>-<%= slot %>"
                      data-action="click->meal-calendar#showPreview touchstart->meal-calendar#handleTouchStart touchend->meal-calendar#handleTouchEnd"
                      draggable="true"
                    >
                      <span class="text-[10px] <%= meal[:text_color] %> text-center px-1 leading-tight"><%= meal[:name] %></span>
                    </div>
                  <% end %>
                <% else %>
                  <!-- Empty cell -->
                  <div 
                    class="w-full h-14 bg-gray-100 rounded cursor-pointer hover:bg-gray-200 transition-colors"
                    data-meal-calendar-target="mealSlot"
                    data-action="click->meal-calendar#showAddMeal"
                  ></div>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Foods tried this week -->
  <div class="px-4 py-4">
    <h3 class="font-semibold text-gray-800 mb-3">Foods tried this week</h3>
    <div class="flex gap-3 overflow-x-auto pb-2">
      <% [
        { name: 'Avocado', image: 'https://images.unsplash.com/photo-1523049673857-eb18f1d7b578?w=100&h=100&fit=crop' },
        { name: 'Broccoli', image: 'https://images.unsplash.com/photo-1459411552884-841db9b3cc2a?w=100&h=100&fit=crop' },
        { name: 'Onion', image: 'https://images.unsplash.com/photo-1618512496248-a07fe83aa8cb?w=100&h=100&fit=crop' },
        { name: 'Garlic', image: 'https://images.unsplash.com/photo-1540148426945-6cf22a6b2f85?w=100&h=100&fit=crop' }
      ].each do |food| %>
        <div class="flex-shrink-0 text-center">
          <div class="w-16 h-16 rounded-lg overflow-hidden mb-1 border border-gray-200">
            <img src="<%= food[:image] %>" alt="<%= food[:name] %>" class="w-full h-full object-cover" onerror="this.src='/icon.png'">
          </div>
          <p class="text-xs text-gray-600"><%= food[:name] %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Allergens tried this week -->
  <div class="px-4 pb-6">
    <h3 class="font-semibold text-gray-800 mb-3">Allergens tried this week</h3>
    <div class="flex gap-3 overflow-x-auto pb-2">
      <% [
        { name: 'Peanuts', image: 'https://images.unsplash.com/photo-1567892320421-1c657571ea4e?w=100&h=100&fit=crop' },
        { name: 'Egg', image: 'https://images.unsplash.com/photo-1582722872445-44dc5f7e3c8f?w=100&h=100&fit=crop' }
      ].each do |allergen| %>
        <div class="flex-shrink-0 text-center">
          <div class="w-16 h-16 rounded-lg overflow-hidden mb-1 border border-gray-200">
            <img src="<%= allergen[:image] %>" alt="<%= allergen[:name] %>" class="w-full h-full object-cover" onerror="this.src='/icon.png'">
          </div>
          <p class="text-xs text-gray-600"><%= allergen[:name] %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Meal Preview Modal -->
  <div data-meal-calendar-target="previewModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 p-4" data-action="click->meal-calendar#hidePreview">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-[280px] overflow-hidden transform transition-all" data-action="click->meal-calendar#stopPropagation">
      <div data-meal-calendar-target="previewContent">
        <!-- Preview content populated by JS or default content -->
        <div class="relative">
          <div class="absolute top-2 left-2 text-gray-500 text-sm font-medium">Meal</div>
          <div class="absolute top-2 right-2">
            <div class="w-8 h-8 rounded-full border-2 border-[#4ECDC4] flex items-center justify-center">
              <svg class="w-4 h-4 text-[#4ECDC4]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
              </svg>
            </div>
          </div>
          <div class="pt-8 px-4 pb-2">
            <img src="https://images.unsplash.com/photo-1490645935967-10de6ba17061?w=200&h=150&fit=crop" alt="Squash Batons" class="w-full h-32 object-cover rounded-lg">
          </div>
        </div>
        
        <div class="px-4 pb-2">
          <div class="flex items-center gap-2">
            <h3 class="font-bold text-lg text-gray-800">Squash Batons</h3>
            <div class="w-6 h-6 rounded-full bg-[#4ECDC4] flex items-center justify-center">
              <span class="text-white text-xs font-bold">b</span>
            </div>
          </div>
          <p class="text-gray-500 text-sm">Bibado</p>
        </div>
        
        <div class="px-4 py-2 flex gap-2 text-xs">
          <div class="flex-1 text-center p-2 bg-gray-50 rounded">
            <div class="text-gray-500">Age</div>
            <div class="font-medium text-[#D4A574]">6 months +</div>
          </div>
          <div class="flex-1 text-center p-2 bg-gray-50 rounded">
            <div class="text-gray-500">Meal</div>
            <div class="font-medium">First Foods</div>
          </div>
          <div class="flex-1 text-center p-2 bg-gray-50 rounded">
            <div class="text-gray-500">Time</div>
            <div class="font-medium">5 mins</div>
          </div>
          <div class="flex-1 text-center p-2 bg-gray-50 rounded">
            <div class="text-gray-500">Skill level</div>
            <div class="font-medium">Easy</div>
          </div>
        </div>
        
        <div class="px-4 py-2">
          <div class="text-xs text-gray-600">
            <span class="font-medium">Makes:</span> 4-5 butternut squash batons + 50g pureed
          </div>
        </div>
        
        <div class="px-4 py-2">
          <div class="flex gap-2 mb-2">
            <button class="flex-1 py-2 bg-[#4ECDC4] text-white text-xs font-medium rounded">Ingredients</button>
            <button class="flex-1 py-2 bg-gray-100 text-gray-600 text-xs font-medium rounded">Instructions</button>
          </div>
          
          <div class="text-sm">
            <p class="font-medium text-gray-800 mb-1">Ingredients</p>
            <p class="text-gray-600 text-xs">1/2 butternut squash</p>
            
            <p class="font-medium text-gray-800 mt-2 mb-1">Tips</p>
            <p class="text-gray-500 text-xs">A ripe butternut squash will feel heavy for its size due to its high water content.</p>
          </div>
        </div>
        
        <div class="px-4 py-3 flex gap-2">
          <%= link_to mockups_meal_path(1), class: "flex-1 py-2 bg-[#4ECDC4] text-white text-center text-sm font-medium rounded-lg" do %>
            View Recipe
          <% end %>
          <button class="flex-1 py-2 bg-gray-100 text-gray-600 text-sm font-medium rounded-lg" data-action="click->meal-calendar#showSwapModal">
            Swap Meal
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Swap Modal -->
  <div data-meal-calendar-target="swapModal" class="fixed inset-0 z-50 hidden items-end justify-center bg-black/50" data-action="click->meal-calendar#closeSwapModal">
    <div class="bg-white rounded-t-3xl shadow-xl w-full max-w-md p-5 pb-8 animate-slide-up" onclick="event.stopPropagation()">
      <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mb-4"></div>
      <h3 class="font-bold text-lg text-[#2C3E50] mb-4">Swap for alternative</h3>
      
      <div class="space-y-2 max-h-60 overflow-y-auto">
        <% [
          { id: 100, name: 'Vegetarian Option', emoji: 'ðŸ¥—', desc: 'Plant-based alternative' },
          { id: 101, name: 'Dairy-Free Option', emoji: 'ðŸŒ±', desc: 'No dairy ingredients' },
          { id: 102, name: 'Quick & Easy', emoji: 'âš¡', desc: '5-minute prep time' },
          { id: 103, name: 'Similar Nutrition', emoji: 'ðŸ’ª', desc: 'Same iron content' }
        ].each do |option| %>
          <button 
            class="w-full flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition-colors text-left border border-gray-200"
            data-action="click->meal-calendar#selectSwapOption"
            data-meal-id="<%= option[:id] %>"
            data-meal-name="<%= option[:name] %>"
          >
            <span class="text-2xl"><%= option[:emoji] %></span>
            <div>
              <div class="font-medium text-[#2C3E50]"><%= option[:name] %></div>
              <div class="text-xs text-gray-500"><%= option[:desc] %></div>
            </div>
          </button>
        <% end %>
      </div>
      
      <button 
        class="w-full mt-4 py-3 text-gray-500 font-medium"
        data-action="click->meal-calendar#closeSwapModal"
      >
        Cancel
      </button>
    </div>
  </div>

  <!-- Add Meal Modal -->
  <div data-meal-calendar-target="addMealModal" class="fixed inset-0 z-50 hidden items-end justify-center bg-black/50" data-action="click->meal-calendar#closeAddMealModal">
    <div class="bg-white rounded-t-3xl shadow-xl w-full max-w-md p-5 pb-8 animate-slide-up" onclick="event.stopPropagation()">
      <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mb-4"></div>
      <h3 class="font-bold text-lg text-[#2C3E50] mb-4">Add a meal</h3>
      
      <!-- Search -->
      <div class="relative mb-4">
        <input type="text" placeholder="Search meals..." class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-[#4ECDC4] focus:ring-2 focus:ring-[#4ECDC4]/20 outline-none">
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      
      <div class="space-y-2 max-h-60 overflow-y-auto">
        <% [
          { id: 1, name: 'Banana Porridge', desc: 'Breakfast â€¢ 10 mins' },
          { id: 2, name: 'Avocado Toast', desc: 'Breakfast â€¢ 5 mins' },
          { id: 3, name: 'Sweet Potato Mash', desc: 'Lunch â€¢ 15 mins' },
          { id: 4, name: 'Chicken Puree', desc: 'Dinner â€¢ 20 mins' }
        ].each do |meal| %>
          <button class="w-full flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition-colors text-left border border-gray-200">
            <div class="w-12 h-12 bg-gray-100 rounded-lg"></div>
            <div>
              <div class="font-medium text-[#2C3E50]"><%= meal[:name] %></div>
              <div class="text-xs text-gray-500"><%= meal[:desc] %></div>
            </div>
          </button>
        <% end %>
      </div>
      
      <button 
        class="w-full mt-4 py-3 text-gray-500 font-medium"
        data-action="click->meal-calendar#closeAddMealModal"
      >
        Cancel
      </button>
    </div>
  </div>
</div>

<style>
  @keyframes slideUp {
    from { transform: translateY(100%); }
    to { transform: translateY(0); }
  }
  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }
</style>
