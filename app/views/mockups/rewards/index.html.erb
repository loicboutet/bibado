<% content_for :title, "Weaning Wings - Bibado" %>

<div class="px-4 py-4">
  <!-- Header Card -->
  <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-6 text-white mb-6">
    <h1 class="text-xl font-bold mb-2">Weaning Wings ðŸ¦‹</h1>
    <div class="flex items-end justify-between">
      <div>
        <p class="text-3xl font-bold"><%= @total_points %></p>
        <p class="text-white/80 text-sm">points earned</p>
      </div>
      <div class="text-right">
        <p class="font-semibold"><%= @current_level %></p>
        <p class="text-white/80 text-sm">Current Level</p>
      </div>
    </div>
    <div class="mt-4">
      <div class="flex justify-between text-sm mb-1">
        <span class="text-white/80">Progress to <%= @next_level %></span>
        <span><%= @progress_to_next %>%</span>
      </div>
      <div class="h-2 bg-white/30 rounded-full overflow-hidden">
        <div class="h-full bg-white rounded-full" style="width: <%= @progress_to_next %>%"></div>
      </div>
    </div>
  </div>
  
  <!-- Achievements -->
  <h2 class="font-semibold text-[#2C3E50] mb-3">Achievements</h2>
  <div class="grid grid-cols-3 gap-3 mb-6">
    <% @achievements.each do |achievement| %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-3 text-center <%= achievement[:unlocked] ? '' : 'opacity-50' %>">
        <div class="w-12 h-12 mx-auto rounded-full flex items-center justify-center mb-2 <%= achievement[:unlocked] ? 'bg-[#FFE66D]' : 'bg-gray-200' %>">
          <span class="text-2xl"><%= achievement[:icon] %></span>
        </div>
        <p class="text-xs font-medium text-[#2C3E50] line-clamp-1"><%= achievement[:name] %></p>
        <p class="text-xs text-[#4ECDC4]">+<%= achievement[:points] %></p>
      </div>
    <% end %>
  </div>
  
  <!-- Recent Activity -->
  <h2 class="font-semibold text-[#2C3E50] mb-3">Recent Activity</h2>
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 divide-y divide-gray-100">
    <% @recent_activity.each do |activity| %>
      <div class="p-3 flex items-center justify-between">
        <div>
          <p class="text-sm text-[#2C3E50]"><%= activity[:action] %></p>
          <p class="text-xs text-gray-500"><%= time_ago_in_words(activity[:time]) %> ago</p>
        </div>
        <span class="text-sm text-[#4ECDC4] font-medium">+<%= activity[:points] %></span>
      </div>
    <% end %>
  </div>
</div>
