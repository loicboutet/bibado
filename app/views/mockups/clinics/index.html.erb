<% content_for :title, "Live Clinics - Bibado" %>

<div class="px-4 py-4">
  <h1 class="text-xl font-bold text-[#2C3E50] mb-4">Live Clinics</h1>
  
  <!-- Upcoming -->
  <h2 class="font-semibold text-[#2C3E50] mb-3">Upcoming</h2>
  <div class="space-y-3 mb-6">
    <% @upcoming_clinics.each do |clinic| %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <div class="flex justify-between items-start">
          <div>
            <p class="font-medium text-[#2C3E50]"><%= clinic[:title] %></p>
            <p class="text-sm text-gray-500">with <%= clinic[:host] %></p>
            <p class="text-sm text-[#FF6B6B] mt-2"><%= clinic[:date].strftime('%a, %b %d at %I:%M %p') %></p>
          </div>
          <button class="px-3 py-1.5 bg-[#FF6B6B] text-white text-sm rounded-lg font-medium">Remind me</button>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Past Recordings -->
  <h2 class="font-semibold text-[#2C3E50] mb-3">Past Recordings</h2>
  <div class="space-y-3">
    <% @past_clinics.each do |clinic| %>
      <%= link_to mockups_clinic_path(clinic[:id]), class: "block" do %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
          <div class="flex">
            <div class="w-28 h-20 bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
            </div>
            <div class="flex-1 p-3">
              <p class="font-medium text-[#2C3E50] text-sm"><%= clinic[:title] %></p>
              <p class="text-xs text-gray-500"><%= clinic[:host] %></p>
              <p class="text-xs text-gray-400 mt-1"><%= clinic[:views] %> views</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
