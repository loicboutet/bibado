<% content_for :title, "Settings - Bibado" %>

<div class="px-4 py-4">
  <div class="flex items-center gap-3 mb-6">
    <%= link_to mockups_profile_path, class: "p-1" do %>
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>
    <h1 class="text-xl font-bold text-[#2C3E50]">Settings</h1>
  </div>
  
  <!-- Notifications -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-4">
    <h2 class="font-semibold text-[#2C3E50] mb-4">Notifications</h2>
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-[#2C3E50]">Meal Reminders</p>
          <p class="text-xs text-gray-500">Daily reminder to log meals</p>
        </div>
        <button class="w-12 h-6 rounded-full transition-colors <%= @notifications[:meal_reminders] ? 'bg-[#4ECDC4]' : 'bg-gray-300' %>">
          <div class="w-5 h-5 bg-white rounded-full shadow transform transition-transform <%= @notifications[:meal_reminders] ? 'translate-x-6' : 'translate-x-1' %>"></div>
        </button>
      </div>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-[#2C3E50]">Daily Tips</p>
          <p class="text-xs text-gray-500">Weaning tips and advice</p>
        </div>
        <button class="w-12 h-6 rounded-full transition-colors <%= @notifications[:daily_tips] ? 'bg-[#4ECDC4]' : 'bg-gray-300' %>">
          <div class="w-5 h-5 bg-white rounded-full shadow transform transition-transform <%= @notifications[:daily_tips] ? 'translate-x-6' : 'translate-x-1' %>"></div>
        </button>
      </div>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-[#2C3E50]">Achievements</p>
          <p class="text-xs text-gray-500">New badges and milestones</p>
        </div>
        <button class="w-12 h-6 rounded-full transition-colors <%= @notifications[:achievements] ? 'bg-[#4ECDC4]' : 'bg-gray-300' %>">
          <div class="w-5 h-5 bg-white rounded-full shadow transform transition-transform <%= @notifications[:achievements] ? 'translate-x-6' : 'translate-x-1' %>"></div>
        </button>
      </div>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-[#2C3E50]">Special Offers</p>
          <p class="text-xs text-gray-500">Discounts on Bibado products</p>
        </div>
        <button class="w-12 h-6 rounded-full transition-colors <%= @notifications[:offers] ? 'bg-[#4ECDC4]' : 'bg-gray-300' %>">
          <div class="w-5 h-5 bg-white rounded-full shadow transform transition-transform <%= @notifications[:offers] ? 'translate-x-6' : 'translate-x-1' %>"></div>
        </button>
      </div>
    </div>
  </div>
  
  <!-- App Preferences -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-4">
    <h2 class="font-semibold text-[#2C3E50] mb-4">App Preferences</h2>
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <span class="text-[#2C3E50]">Units</span>
        <span class="text-gray-500">Metric</span>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-[#2C3E50]">Language</span>
        <span class="text-gray-500">English</span>
      </div>
    </div>
  </div>
  
  <!-- About -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 divide-y divide-gray-100">
    <a href="#" class="flex items-center justify-between p-4 hover:bg-gray-50">
      <span class="text-[#2C3E50]">Privacy Policy</span>
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
    </a>
    <a href="#" class="flex items-center justify-between p-4 hover:bg-gray-50">
      <span class="text-[#2C3E50]">Terms of Service</span>
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
    </a>
    <div class="p-4 text-center">
      <p class="text-gray-500 text-sm">Version 1.0.0</p>
    </div>
  </div>
</div>
